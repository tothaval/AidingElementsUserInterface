<UserControl x:Class="AidingElementsUserInterface.Core.AEUI_UserControls.CoreValueChange"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AidingElementsUserInterface.Core.AEUI_UserControls"
            xmlns:core="clr-namespace:AidingElementsUserInterface.Core"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border x:Name="border">
        <StackPanel Orientation="Horizontal" Margin="2"
                    HorizontalAlignment="Left">
            <TextBlock x:Name="TB_value_identifier"  
                       
                   Margin="0,0,5,0"               
                   Width="90"
                   TextAlignment="Right"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center">                
            </TextBlock>
            <StackPanel x:Name="SP_ValueChangeElement">
            <core:CoreTextBox x:Name="CTB_Value" 
                              HorizontalAlignment="Right"
                              Visibility="Visible">
                </core:CoreTextBox>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
