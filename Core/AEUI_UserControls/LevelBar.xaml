<UserControl x:Class="AidingElementsUserInterface.Core.AEUI_UserControls.LevelBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AidingElementsUserInterface.Core.AEUI_UserControls"
              xmlns:core="clr-namespace:AidingElementsUserInterface.Core"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical"
                >
        <StackPanel Orientation="Horizontal">
            <local:CoreLabel x:Name="LevelID" />
            <local:CoreLabel x:Name="LevelName"/>
            <local:CoreLabel x:Name="LevelPurpose"/>
            <local:CoreLabel x:Name="LevelVisibility"/>
            <local:CoreLabel x:Name="LevelElementCount"/>
        </StackPanel>
        
        <local:LevelShift MinHeight ="{DynamicResource LevelBarHeight}"/>

    </StackPanel>
</UserControl>
